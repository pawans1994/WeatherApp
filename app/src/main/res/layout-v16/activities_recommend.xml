<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/act_rec_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="@drawable/theme1">

    <LinearLayout
        android:id="@+id/act_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/cloth_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/cloth_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/loading"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/cloth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/cloth_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:visibility="invisible"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            android:orientation="vertical"
            android:gravity="center|bottom"
            android:layout_weight="2"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Recommendation"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/activity_rec_icon"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/loading"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp"/>
            <TextView
                android:id="@+id/activity_rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textStyle="bold"
                android:textSize="20dp"
                android:padding="4dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/act_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:visibility="invisible"
                android:textAlignment="center"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/activity_rec_desc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Description"
                android:visibility="invisible"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/act_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/act_errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="Something went wrong"/>
</RelativeLayout>